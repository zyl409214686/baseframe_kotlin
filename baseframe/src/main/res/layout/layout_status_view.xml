<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_status_view_image"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginTop="-110dp"
        android:src="@drawable/ic_status_load_error" />

    <ImageView
        android:id="@+id/iv_status_view_loading"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_loading"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_status_view_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="加载失败"
        android:textColor="#ffa6a6aa"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/btn_status_view_reply"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/ic_reply"
        android:gravity="center"
        android:minWidth="120dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="Refresh and retry"
        android:textColor="#666666"
        android:textSize="14sp"
        android:visibility="visible" />
</LinearLayout>